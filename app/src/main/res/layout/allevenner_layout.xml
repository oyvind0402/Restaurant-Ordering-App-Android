<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_logo" >

        <ImageView
            android:layout_width="@dimen/txt_height_sm"
            android:layout_height="@dimen/txt_height_sm"
            android:src="@mipmap/ic_launcher_foreground"
            android:layout_gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/venner"
            android:textSize="@dimen/txt_size_lg"
            android:textColor="@color/white"/>

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/banner"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/margin_md"
        android:paddingStart="@dimen/margin_md">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_height_mmd"
            android:id="@+id/venneListView"
            android:fadeScrollbars="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_md"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/endre_venn_btn"
                android:layout_width="@dimen/txt_width_sm"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_sm"
                android:layout_marginStart="@dimen/margin_sm"
                android:text="@string/endre_venner"
                android:textColor="@color/black"
                android:background="@color/blue_logo"
                android:onClick="endreVenn" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/slett_venn_btn"
                android:layout_width="@dimen/txt_width_sm"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_sm"
                android:layout_marginStart="@dimen/margin_sm"
                android:text="@string/slett_venner"
                android:textColor="@color/black"
                android:background="@color/blue_logo"
                android:onClick="slettVenn" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/lagre_venn_btn"
            android:layout_width="@dimen/txt_width_lg"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_md"
            android:text="@string/ny_venn"
            android:textColor="@color/beige"
            android:background="@color/red_logo"
            android:onClick="lagreVenn" />

    </LinearLayout>

</LinearLayout>