<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_logo" >

        <ImageView
            android:layout_width="@dimen/txt_height_sm"
            android:layout_height="@dimen/txt_height_sm"
            android:layout_gravity="start"
            android:contentDescription="@string/ikon_beskrivelse"
            android:src="@mipmap/ic_launcher_foreground"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restauranter"
            android:textSize="@dimen/txt_size_xl"
            android:textColor="@color/white" />

    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/banner"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:contentDescription="@string/banner_beskrivelse"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical" >

        <ListView
            android:layout_width="match_parent"
            android:layout_height="@dimen/txt_height_mmd"
            android:id="@+id/restaurantListView"
            android:fadeScrollbars="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_md"
            android:layout_marginBottom="@dimen/margin_md"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/endre_restaurant_btn"
                android:layout_width="@dimen/txt_width_sm"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:text="@string/endre"
                android:drawableTop="@android:drawable/ic_menu_edit"
                android:paddingBottom="8dp"
                android:paddingTop="5dp"
                android:layout_marginStart="@dimen/margin_sm"
                android:layout_marginEnd="@dimen/margin_sm"
                android:background="@color/blue_logo"
                android:onClick="endreRestaurant" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/slett_restaurant_btn"
                android:layout_width="@dimen/txt_width_sm"
                android:layout_height="@dimen/btn_height"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/margin_sm"
                android:layout_marginEnd="@dimen/margin_sm"
                android:text="@string/slett"
                android:drawableTop="@android:drawable/ic_menu_delete"
                android:paddingBottom="8dp"
                android:paddingTop="5dp"
                android:background="@color/blue_logo"
                android:onClick="slettRestaurant" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/lagre_restaurant_btn"
            android:layout_width="@dimen/txt_width_lg"
            android:layout_height="@dimen/btn_height"
            android:layout_gravity="center"
            android:background="@color/red_logo"
            android:drawableStart="@drawable/lagrerestaurant"
            android:drawableTint="@color/beige"
            android:onClick="lagreRestaurant"
            android:paddingStart="40dp"
            android:paddingEnd="50dp"
            android:text="@string/ny_restaurant"
            android:textColor="#FFF3E0" />

    </LinearLayout>

</LinearLayout>